<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Action</th>
    </tr>
    <% obj.each do |category| %>
        <tr>
          <td>
            <%= category.name %>
          </td>
          <td align="center">
            <%= link_to "Show articles", category_path(category), class: "btn btn-xs btn-success" %>
            <%= link_to "Edit category name", edit_category_path(category), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete category", category_path(category), method: :delete, class: "btn btn-xs btn-danger",
                        data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
    <% end %>
  </table>
</div>