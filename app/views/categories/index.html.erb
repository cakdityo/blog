<h1 class="form-header text-center">
  <strong>Listing all categories</strong>
</h1>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2 well">
    <% @categories.each_with_index do |category, index| %>
    <span class="title">
      <%= link_to category.name, category_path(category) %>
      <%= "|" if index != @categories.count-1 %>
    </span>
    <% end %>

    <% if logged_in? %>
        <div class="article-footer text-center">
          <%= link_to "Setting Category", new_category_path, class: "btn btn-primary btn-xs" %>
        </div>
    <% end %>
  </div>
</div>
