<% if obj[:model].errors.any? %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= pluralize obj[:model].errors.count, 'error' %> prohibited this <%= obj[:name] %> from being saved:
          </h3>
        </div>
        <div class="panel-body">
          <ul>
          <% obj[:model].errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>