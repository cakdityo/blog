<h1 class="form-header text-center">
  <strong>Login</strong>
</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(:session, url: login_path, html: {class: "form-horizontal", role: "form"}) do |f| %>

        <div class="form-group">
          <%= f.label :username, class: "col-sm-2 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: " Enter username", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-sm-2 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
          </div>
        </div>

    <% end %>
  </div>
</div>